{
  "rules": [
    {
      "enabled": true,
      "name": "CostOpt",
      "type": "Lifecycle",
      "definition": {
        "actions": {
          "baseBlob": {
            "enableAutoTierToHotFromCool": true,
            "tierToCool": {
              "daysAfterLastAccessTimeGreaterThan": 30
            },
            "tierToArchive": {
              "daysAfterLastTierChangeGreaterThan": 40,
              "daysAfterModificationGreaterThan": 50
            },
            "delete": {
              "daysAfterCreationGreaterThan": 100
            }
          },
          "snapshot": {
            "delete": {
              "daysAfterCreationGreaterThan": 100
            }
          }
        },
        "filters": {
          "blobTypes": [
            "blockBlob"
          ]
        }
      }
    }
  ]
}